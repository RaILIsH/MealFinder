<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    >
    <TextView
        android:id="@+id/textSettings"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Холодильник"
        android:textColor="@color/black100"
        android:textSize="40dp"
        android:layout_marginTop="3dp"
        />
    <ImageButton
        android:id="@+id/buttonplus"
        android:background="#00000000"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:src="@drawable/plus"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
         />
    <RelativeLayout
        android:id="@+id/dobavte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSettings"
        android:background="@drawable/nicebg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Добавьте в эту вкладку ингредиенты, которые хранятся у вас в холодильнике."
        android:textColor="@android:color/black"
        android:gravity="left"
        android:layout_margin="15dp"
        android:layout_marginRight="15dp"
        />
    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSettings"
        android:layout_marginBottom="150dp"
        >
        <LinearLayout
            android:id="@+id/ingredientsadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/torecepts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Посмотреть рецепты"
        android:textColor="@android:color/white"
        android:background="@color/maincolor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:textSize="18dp"
        />
    <RelativeLayout
        android:id="@+id/tofunctions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="105dp"
        android:background="#EEE"
        >
        <TextView
            android:id="@+id/functionname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</RelativeLayout>
