<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    >
    <RelativeLayout
        android:id="@+id/actbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white100"
        android:elevation="1dp"
        >
        <ImageView
            android:id="@+id/backlist"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_left_arrow"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/receptname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:text="fdsfsdkfdsfs"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="35dp">
        </TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/actbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/scrollinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/receptimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:id="@+id/ingredientsofrecept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:background="@drawable/beautifully"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="50dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ингредиенты"
                        android:textSize="30dp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/cnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:text="10 порций"
                        android:textSize="30dp"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>